.search-bar
  .form-group
    padding: 14px 0;
    margin-bottom: 0;

  .form-control
    border: 0;

  .title
    color black
    padding-bottom 10px
    margin 0
    margin-bottom 24px
    border-bottom 1px solid #E3E5E7

  .search-control
    position relative

    .search-icon
      position absolute
      top 24px
      left 16px
      opacity .5
      color #5C666F;

    .close-icon
      color #999
      position absolute
      bottom 14px
      right 16px

    input
      height 45px
      padding 8px 16px
      box-shadow none
      text-indent 26px
      color: #5C666F
      -webkit-transition all .5 ease
      transition all .5s ease

      &:focus
        text-indent 0
        -webkit-transition all .5 ease
        transition: all .5s ease

      &::-webkit-input-placeholder
        font-family: AvenirNext-Regular;
        font-size: 16px;
        color: #5C666F;
        line-height: 21px;
        padding: 12px 0;

      &::-moz-placeholder
        font-family: AvenirNext-Regular;
        font-size: 16px;
        color: #5C666F;
        line-height: 21px;
        padding: 12px 0;

      &:-ms-input-placeholder
        font-family: AvenirNext-Regular;
        font-size: 16px;
        color: #5C666F;
        line-height: 21px;
        padding: 12px 0;

      &:-moz-placeholder
        font-family: AvenirNext-Regular;
        font-size: 16px;
        color: #5C666F;
        line-height: 21px;
        padding: 12px 0;
